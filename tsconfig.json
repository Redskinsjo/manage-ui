{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./dist"]
}
